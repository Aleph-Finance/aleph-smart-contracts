{
  "extends": ["solhint:recommended"],
  "rules": {
    "prettier/prettier": "error",
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "compiler-version": "off",
    "no-empty-blocks": "off",
    "var-name-mixedcase": "off",
    "quotes": ["warn", "single"],
    "not-rely-on-time": "off"
  },
  "plugins": ["prettier"]
}
